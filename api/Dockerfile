# Базовий образ
FROM node:20-alpine3.17

# Створення робочої папки застосунку
WORKDIR /usr/src/app

# Копіювання package.json та встановлення залежностей
COPY package*.json ./
RUN npm install

# Встановлення nodemon для середовища розробки
RUN npm install -g nodemon

# Копіюємо вихідний код у робочу папку
COPY . .

# Повідомляємо Docker, що в контейнері є застосунок, що прослуховує даний порт
EXPOSE 3001

# Реєструємо команду для запуску застосунку при запуску контейнера
CMD [ "npm", "start" ]
